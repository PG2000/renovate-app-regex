{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["app.yaml$"],
      "matchStrings": [
        "renovate.tkp.hdi.dev\/catalog: (?<datasource>.*?) *name: (?<depName>.*?) *version: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "helmv3"
    }
  ],
  "labels": [
    "bot"
  ]
}
